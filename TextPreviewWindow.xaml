<ui:FluentWindow x:Class="FontMaker.TextPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:data="clr-namespace:FontMaker.Data"
        xmlns:properties="clr-namespace:FontMaker.Resources.Lang"
        Title="{x:Static properties:Languages.TextPreviewTitle}" Height="600" Width="800"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        WindowCornerPreference="Round">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{x:Static properties:Languages.TextPreviewTitle}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
        </ui:TitleBar>

        <!-- 输入区域 -->
        <ui:Card Grid.Row="1" Margin="10,10,10,5">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="{x:Static properties:Languages.PreviewText}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ui:TextBox x:Name="previewTextBox" 
                           PlaceholderText="{x:Static properties:Languages.InputPreviewText}"
                           Height="60"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           TextChanged="PreviewTextBox_TextChanged"/>
            </DockPanel>
        </ui:Card>
        
        <!-- 控制区域 -->
        <ui:Card Grid.Row="2" Margin="10,5">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.Zoom}" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <ui:Button x:Name="zoomOutButton" Icon="{ui:SymbolIcon ZoomOut24}" 
                              ToolTip="{x:Static properties:Languages.ZoomOutTooltip}" Width="36" Height="32" Margin="0,0,5,0" Click="ZoomOutButton_Click"/>
                    <ui:Button x:Name="zoomInButton" Icon="{ui:SymbolIcon ZoomIn24}" 
                              ToolTip="{x:Static properties:Languages.ZoomInTooltip}" Width="36" Height="32" Margin="0,0,5,0" Click="ZoomInButton_Click"/>
                    <ui:Button x:Name="zoomResetButton" Icon="{ui:SymbolIcon ArrowReset32, Filled=True}" 
                              ToolTip="{x:Static properties:Languages.ResetTooltip}" Width="36" Height="32" Click="ZoomResetButton_Click"/>
                </StackPanel>
                <Slider x:Name="zoomSlider" Minimum="{x:Static data:Config.MinZoomScale}" Maximum="{x:Static data:Config.MaxZoomScale}" Value="{x:Static data:Config.DefaultPreviewZoom}" 
                       TickFrequency="0.1" IsSnapToTickEnabled="True" VerticalAlignment="Center"
                       ValueChanged="ZoomSlider_ValueChanged"/>
            </DockPanel>
        </ui:Card>
        
        <!-- 预览区域 -->
        <ui:Card Grid.Row="3" Margin="10,5,10,10">
            <Grid>
                <ScrollViewer x:Name="previewScrollViewer" 
                             HorizontalScrollBarVisibility="Auto" 
                             VerticalScrollBarVisibility="Auto"
                             SizeChanged="PreviewScrollViewer_SizeChanged">
                    <Canvas x:Name="previewCanvas" 
                           Background="#FAFAFA"
                           MinWidth="{Binding ActualWidth, ElementName=previewScrollViewer}"
                           MinHeight="{Binding ActualHeight, ElementName=previewScrollViewer}"/>
                </ScrollViewer>
            </Grid>
        </ui:Card>
    </Grid>
</ui:FluentWindow>