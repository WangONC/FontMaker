<ui:FluentWindow x:Class="FontMaker.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:FontMaker"
            xmlns:converters="clr-namespace:FontMaker.Converters"
            xmlns:data="clr-namespace:FontMaker.Data"
            xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:properties="clr-namespace:FontMaker.Resources.Lang"
                 mc:Ignorable="d"
            Title="{x:Static properties:Languages.AppName}" Height="1012" Width="1200" MinHeight="600" MinWidth="900"
            WindowStartupLocation="CenterScreen"
            WindowCornerPreference="Default"
            WindowBackdropType="Mica"
            ExtendsContentIntoTitleBar="True">

    <Window.Resources>
        <converters:FontDisplayNameConverter x:Key="FontDisplayNameConverter"/>
    </Window.Resources>

    <Grid Margin="0,0,0,-5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{x:Static properties:Languages.AppName}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
        </ui:TitleBar>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧预览区域 -->
            <ui:Card Grid.Column="0" Padding="15" Height="946">
                <Grid Height="907">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 预览区标题 -->
                    <TextBlock Grid.Row="0" Text="{x:Static properties:Languages.charView}" FontSize="14" FontWeight="SemiBold" 
                              Margin="0,0,0,12"/>

                    <!-- 字符预览画布 -->
                    <Border Grid.Row="1" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                       BorderThickness="1" CornerRadius="6" Background="White" Margin="0,0,0,12">
                        <ScrollViewer x:Name="previewScrollViewer"
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <Viewbox x:Name="pixelViewbox" Stretch="Uniform">
                                <!-- 像素网格画布 -->
                                <Canvas x:Name="pixelCanvas" Background="White" 
                                   Width="320" Height="320" HorizontalAlignment="Center" VerticalAlignment="Center">

                                    <!-- 示例：16x16像素网格的展示 (每个像素20x20单位) -->
                                    <!-- 这将通过代码根据右侧设置的像素尺寸动态生成 -->

                                    <!-- 网格背景 -->
                                    <Rectangle x:Name="gridBackground" 
                                          Width="320" Height="320" 
                                          Fill="White" Stroke="LightGray" StrokeThickness="1"/>

                                    <!-- 像素网格容器 - 将通过代码动态填充 -->
                                    <Canvas x:Name="pixelGridContainer"/>

                                </Canvas>
                            </Viewbox>
                        </ScrollViewer>
                    </Border>

                    <!-- 当前字符信息和缩放控制 -->
                    <StackPanel Grid.Row="2">
                        <!-- 缩放控制 -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.ViewResize}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                <ui:Button x:Name="zoomOutButton" Width="36" Height="36" 
                                          Appearance="Secondary" FontSize="14" Margin="0,0,2,0"
                                          Icon="{ui:SymbolIcon ZoomOut24}"
                                          Click="ZoomOutButton_Click" ToolTip="{x:Static properties:Languages.ZoomOutTooltip}"/>
                                <Slider x:Name="zoomSlider" Width="60" Minimum="{x:Static data:Config.MinZoomScale}" Maximum="{x:Static data:Config.MaxZoomScale}" Value="{x:Static data:Config.DefaultPreviewZoom}" 
                                       VerticalAlignment="Center" Margin="0,0,2,0"
                                       ValueChanged="ZoomSlider_ValueChanged"/>
                                <ui:Button x:Name="zoomInButton" Width="36" Height="36" 
                                          Appearance="Secondary" FontSize="14" Margin="0,0,2,0"
                                          Icon="{ui:SymbolIcon Zoomin24}"
                                          Click="ZoomInButton_Click" ToolTip="{x:Static properties:Languages.ZoomInTooltip}"/>
                                <ui:Button x:Name="zoomResetButton" Width="36" Height="36" 
                                          Icon="{ui:SymbolIcon ArrowReset32, Filled=True}"
                                          Appearance="Secondary" FontSize="14"
                                          Click="ZoomResetButton_Click" ToolTip="{x:Static properties:Languages.ResetTooltip}"/>
                            </StackPanel>
                        </DockPanel>

                        <TextBlock Text="{x:Static properties:Languages.CurrentChar}" FontWeight="SemiBold" Margin="0,0,0,8" Height="19"/>

                        <!-- 字符输入和导航区域 -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 字符输入 -->
                            <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.Char}" VerticalAlignment="Center" Width="50"/>
                                <ui:TextBox x:Name="characterInputTextBox" Text="A" Height="33"  MaxLines="1" MinLines="1"
                                       TextAlignment="Center" FontSize="16"
                                       TextChanged="CharacterInputTextBox_TextChanged"
                                       LostFocus="CharacterInputTextBox_LostFocus"
                                       KeyDown="CharacterInputTextBox_KeyDown"/>
                            </DockPanel>

                            <!-- 当前字符信息 -->
                            <DockPanel Grid.Row="1" Margin="0,0,0,8">
                                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.Current}" VerticalAlignment="Center" Width="50"/>
                                <ui:TextBox x:Name="currentCharInfoTextBox" Text="U+0000 (0/0)" Height="33" MaxLines="1" MouseWheel="currentCharInfoTextBox_MouseWheel"
                                           IsReadOnly="True" TextAlignment="Center" FontSize="12"/>
                            </DockPanel>

                            <!-- 字符导航 -->
                            <DockPanel Grid.Row="2" Margin="0,0,0,0">
                                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.Navigation}" VerticalAlignment="Center" Width="50"/>
                                <StackPanel Orientation="Horizontal">
                                    <ui:Button x:Name="firstCharButton" Content="⫷" Width="44" Height="29" Margin="0,0,2,0"
                                              Appearance="Secondary" ToolTip="{x:Static properties:Languages.FirstChar}" FontSize="12"
                                              Click="FirstCharButton_Click"/>
                                    <ui:Button x:Name="prevCharButton" Content="◀" Width="44" Height="29" Margin="0,0,2,0"
                                              Appearance="Secondary" ToolTip="{x:Static properties:Languages.PreviousChar}" FontSize="12"
                                               PreviewMouseLeftButtonDown="prevCharButton_MouseLeftButtonDown"
                                               PreviewMouseLeftButtonUp="prevCharButton_MouseLeftButtonUp"/>
                                    <ui:Button x:Name="nextCharButton" Content="▶" Width="44" Height="29" Margin="0,0,2,0"
                                              Appearance="Secondary" ToolTip="{x:Static properties:Languages.NextChar}" FontSize="12"
                                               PreviewMouseLeftButtonDown="nextCharButton_MouseLeftButtonDown"
                                               PreviewMouseLeftButtonUp="nextCharButton_MouseLeftButtonUp"/>
                                    <ui:Button x:Name="lastCharButton" Content="⫸" Width="44" Height="29"
                                              Appearance="Secondary" ToolTip="{x:Static properties:Languages.LastChar}" FontSize="12"
                                              Click="LastCharButton_Click"/>
                                </StackPanel>
                            </DockPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- 右侧设置面板 -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- 字体设置 -->
                    <ui:Card Margin="0,0,0,12" Padding="15">
                        <StackPanel>
                            <TextBlock Text="{x:Static properties:Languages.FontSetting}" FontSize="14" FontWeight="SemiBold" 
                                  Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 字体选择行 -->
                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.Font}" VerticalAlignment="Center" Width="50"/>
                                    <ui:Button DockPanel.Dock="Right" x:Name="importFontButton" 
                                          Content="{x:Static properties:Languages.Import}" Width="77" Height="35" Margin="8,0,0,0"
                                          Appearance="Secondary" FontSize="12" 
                                          Icon="{ui:SymbolIcon DocumentAdd24}" Click="importFontButton_Click"/>
                                    <ComboBox  x:Name="fontComboBox" Height="35"
                                               SelectedItem="{Binding FontVM.SelectedFont}"
                                         ItemsSource="{Binding FontVM.AllFonts}" IsEditable="False" SelectedIndex="0"
                                         SelectionChanged="FontComboBox_SelectionChanged">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock FontFamily="{Binding}" Text="{Binding Converter={StaticResource FontDisplayNameConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </DockPanel>

                                <!-- 字号和样式行 -->
                                <DockPanel Grid.Row="1" Margin="0,0,0,8">
                                    <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.FontSize}" VerticalAlignment="Center" Width="50"/>
                                    <ComboBox SelectedItem="{Binding FontVM.SelectedVariant}"
                                              ItemsSource="{Binding FontVM.FontVariants}" DockPanel.Dock="Right" x:Name="fontStyleComboBox" Width="114" Height="35" Margin="8,0,0,0" SelectionChanged="fontStyleComboBox_SelectionChanged">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayName}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontFamily" Value="{Binding DataContext.FontVM.SelectedFont, RelativeSource={RelativeSource AncestorType=Window}}" />
                                                            <Setter Property="FontWeight" Value="{Binding Typeface.Weight}" />
                                                            <Setter Property="FontStyle" Value="{Binding Typeface.Style}" />
                                                            <Setter Property="FontStretch" Value="{Binding Typeface.Stretch}" />
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <ui:NumberBox x:Name="fontSize" Value="16" Height="35" Minimum="0" TextChanged="fontSize_TextChanged"/>
                                </DockPanel>

                            </Grid>
                        </StackPanel>
                    </ui:Card>

                    <!-- 字符集设置 -->
                    <ui:Card Margin="0,0,0,12" Padding="15">
                        <StackPanel>
                            <TextBlock Text="{x:Static properties:Languages.CharSet}" FontSize="14" FontWeight="SemiBold" 
                                  Margin="0,0,0,12"/>

                            <!-- 标准字符集 -->
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.StandardCharSet}" VerticalAlignment="Center" Width="80" FontSize="12"/>
                                <ComboBox DockPanel.Dock="Left" x:Name="charsetComboBox" Height="33" SelectionChanged="CharsetComboBox_SelectionChanged" Margin="0,0,8,0"
                                          ItemsSource="{Binding CharsetVM.AllCharsets}"
                                          SelectedItem="{Binding CharsetVM.SelectedCharset}">
                                    
                                </ComboBox>
                            </DockPanel>

                            <!-- 自定义字符集 -->
                            <DockPanel Margin="0,0,0,0">
                                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.CustomCharSet}" VerticalAlignment="Center" Width="80" FontSize="12"/>
                                <ui:Button DockPanel.Dock="Right" x:Name="importCustomCharsetButton" 
                                          Content="{x:Static properties:Languages.Import}" Height="33" Width="96" Margin="8,0,0,0"
                                          Appearance="Secondary" FontSize="12"
                                          Icon="{ui:SymbolIcon FolderOpen24}"
                                          Click="BrowseCustomCharsetButton_Click"/>
                                <ui:Button DockPanel.Dock="Right" x:Name="editCustomCharsetButton" 
                                          Content="{x:Static properties:Languages.Edit}" Height="33" Width="96" Margin="0,0,8,0"
                                          Appearance="Secondary" FontSize="12"
                                          Icon="{ui:SymbolIcon Edit24}"/>
                            </DockPanel>
                        </StackPanel>
                    </ui:Card>

                    <!-- 点阵大小 -->
                    <ui:Card Margin="0,0,0,12" Padding="15">
                        <StackPanel>
                            <TextBlock Text="{x:Static properties:Languages.PointSize}" FontSize="14" FontWeight="SemiBold" 
                                  Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="{x:Static properties:Languages.Width}" Margin="0,0,0,4" FontSize="12"/>
                                    <ui:NumberBox x:Name="widthNumberBox" Value="16" Height="33" Minimum="0"
                                             ValueChanged="PixelSizeChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="{x:Static properties:Languages.Height}" Margin="0,0,0,4" FontSize="12"/>
                                    <ui:NumberBox x:Name="heightNumberBox" Value="16" Minimum="0" Height="33"
                                             ValueChanged="PixelSizeChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">
                                    <TextBlock Text="{x:Static properties:Languages.HorizontalOffset}" Margin="0,0,0,4" FontSize="12"/>
                                    <ui:NumberBox x:Name="horizontalSpaceNumberBox" Value="0" Height="33" 
                                                  ValueChanged="SpaceSizeChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,8,0,0">
                                    <TextBlock Text="{x:Static properties:Languages.VerticalOffset}" Margin="0,0,0,4" FontSize="12"/>
                                    <ui:NumberBox x:Name="verticalSpaceNumberBox" Value="0" Height="33"
                                                  ValueChanged="SpaceSizeChanged"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ui:Card>

                    <!-- 扫描方式 -->
                    <ui:Card Margin="0,0,0,12" Padding="15">
                        <StackPanel>
                            <TextBlock Text="{x:Static properties:Languages.ScanMethod}" FontSize="14" FontWeight="SemiBold" 
                                  Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="horizontalScanRadio" Content="{x:Static properties:Languages.HorizontalScan}" IsChecked="True" Margin="0,0,15,0"/>
                                <RadioButton x:Name="verticalScanRadio" Content="{x:Static properties:Languages.VerticalScan}"/>
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>

                    <!-- 输出设置 -->
                    <ui:Card Margin="0,0,0,12" Padding="15" Height="210">
                        <StackPanel>
                            <TextBlock Text="{x:Static properties:Languages.OutputSetting}" FontSize="14" FontWeight="SemiBold" 
                                  Margin="0,0,0,12"/>

                            <!-- 位序排列 -->
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.BitOrderLabel}" VerticalAlignment="Center" Width="70" FontSize="12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton x:Name="highBitFirstRadio" Content="{x:Static properties:Languages.LeftToRightLabel}" IsChecked="True" FontSize="12" Margin="0,0,12,0" 
                                                 Checked="FirstRadioCheckedChanged"
                                                 Unchecked="FirstRadioCheckedChanged" Width="60"/>
                                    <RadioButton x:Name="lowBitFirstRadio" Content="{x:Static properties:Languages.RightToLeftLabel}" FontSize="12"
                                                 Checked="FirstRadioCheckedChanged"
                                                 Unchecked="FirstRadioCheckedChanged" Width="60"/>
                                </StackPanel>
                            </DockPanel>

                            <!-- 字节宽度 -->
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.ByteWidthLabel}" VerticalAlignment="Center" Width="70" FontSize="12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton x:Name="fixedWidthRadio" Content="{x:Static properties:Languages.FixedWidthLabel}" IsChecked="True" FontSize="12" Margin="0,0,12,0"
                                                 Checked="FixedRadioCheckedChanged"
Unchecked="FixedRadioCheckedChanged"/>
                                    <RadioButton x:Name="variableWidthRadio" Content="{x:Static properties:Languages.VariableWidthLabel}" FontSize="12"
                                                                                                  Checked="FixedRadioCheckedChanged"
Unchecked="FixedRadioCheckedChanged"/>
                                </StackPanel>
                            </DockPanel>

                            <!-- 文件格式 -->
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.FileFormatLabel}" VerticalAlignment="Center" Width="70" FontSize="12"/>
                                <ComboBox x:Name="fileFormatComboBox" Height="33" FontSize="12" 
                                          ItemsSource="{Binding ExportVM.AvailableFormats}"
                                            SelectedItem="{Binding ExportVM.SelectedFormat}">
                                </ComboBox>
                            </DockPanel>

                            <!-- 灰度级别 -->
                            <StackPanel Margin="0,0,0,0">
                                <DockPanel Margin="0,0,0,4">
                                    <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Languages.GrayLevelLabel}" VerticalAlignment="Center" Width="70" FontSize="12"/>
                                    <TextBlock DockPanel.Dock="Right" x:Name="grayLevelText" Text="{x:Static properties:Languages.OneBitText}" FontSize="12" VerticalAlignment="Center" Width="30"/>
                                    <Slider x:Name="grayLevelSlider" Minimum="0" Maximum="3" Value="0" 
                                           TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True"
                                           ValueChanged="GrayLevelSlider_ValueChanged" Height="24"/>
                                </DockPanel>
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>

                    <!-- 操作按钮 -->
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 设置按钮 -->
                        <ui:Button Grid.Row="0" x:Name="settingsButton" Content="{x:Static properties:Languages.SettingsTitle}" Height="30" 
                                  Appearance="Secondary" Icon="{ui:SymbolIcon Options48}" 
                                  ToolTip="{x:Static properties:Languages.AdvanceSetting}" HorizontalAlignment="Stretch" Click="SettingsButton_Click"/>
                        
                        <!-- 主要操作按钮 -->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 进度条 -->
                            <ProgressBar x:Name="generateProgressBar" Grid.Row="0" Height="4" 
                                        Visibility="Collapsed" IsIndeterminate="False"/>
                            <TextBlock x:Name="progressText" Grid.Row="0" Text="" 
                                      FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Visibility="Collapsed" Foreground="Gray"/>
                            
                            <!-- 按钮 -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ui:Button Grid.Column="0" x:Name="previewButton" Content="{x:Static properties:Languages.PreviewTab}" Height="36" 
                                          Appearance="Secondary" Icon="{ui:SymbolIcon Eye24}" Width="146" Click="previewButton_Click"/>
                                <ui:Button Grid.Column="2" x:Name="generateButton" Content="{x:Static properties:Languages.GenerateFontLibrary}" Height="36" 
                                          Appearance="Primary" Icon="{ui:SymbolIcon Save24}" Width="146" Click="generateButton_Click"/>
                            </Grid>
                        </Grid>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
            <ui:SnackbarPresenter x:Name="SnackbarPresenter" 
                             VerticalAlignment="Bottom" 
                             HorizontalAlignment="Stretch"/>

        </Grid>
    </Grid>
</ui:FluentWindow>